<%= form_with(model: schedule, local: true) do |form| %>
  <%= render 'layouts/flash_message' %>
  <div class="form-group">
    <%= form.label :work_date %>
    <%= form.date_select :work_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <%= form.time_select :start_time, ampm: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :end_time %>
    <%= form.time_select :end_time, ampm: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :employees %>
    <%= form.select :employee_id, @employees.collect{|i| [i.name, i.id]}, {include_blank: "Please select"}, {class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
    <%= link_to 'Back', schedules_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
